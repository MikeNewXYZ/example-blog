---
import getSettings from "../lib/getSettings";
import LandingPosts from "../components/LandingPosts/index.astro";

const settings = await getSettings();

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={settings?.siteDescription}>
		<meta name="keywords" content={settings?.siteKeywords}>
		<title>{settings?.siteTitle}</title>
	</head>
	<body>
		<LandingPosts
			heading={{
				title: "The Art of Minimalism: Living with Less",
				subtitle: "How Simplifying Your Life Can Lead to Greater Happiness and Fulfillment",
			}}
			posts={[
				{
					href: "#",
					title: "This is a cactus",
					subtitle: "Everything you need to know about a cactus and more!",
					imageSrc:
						"https://images.pexels.com/photos/21245316/pexels-photo-21245316/free-photo-of-potted-cactus-plant.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
					imageWidth: 1260,
					imageHeight: 750,
				},
			]}
			button={{ label: "Load More" }}
		/>
	</body>
</html>
